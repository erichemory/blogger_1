<!DOCTYPE html>
<html>
<head>
	<title>TTS Blogger</title>

	<%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" %>
	<%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.5/superhero/bootstrap.min.css" %>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" %>


	<%= csrf_meta_tags %>
</head>
<body>

	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
			<a class="navbar-brand" href="/">
			<!-- <img alt="Brand" src="https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcSFhcP0gbJMqDwJ6vLEDnr6JxB40sNHGVZYMG-6YxDWg0La_viF"> --><button type="button" class="btn btn-default">Home Disco!</button>
			</a>
			
	</div>
		<div class="container">
			<div class="pull-right">
				<%= link_to "Blog Posts", blog_posts_path, 
				   class: "btn btn-info" %>
				<% if user_signed_in? %>
				<%= link_to "Edit Profile", edit_user_registration_path,
					class: "btn btn-primary" %>
				<% end %>

		<% if user_signed_in? %>
		  <%= link_to "Sign Out", destroy_user_session_path,
			method: :delete, class: "btn btn-danger" %>
			<% end %>

			</div>
				</div>
					</nav>

				<div class= "container">
			<%= yield %>
		</body>
</html>
